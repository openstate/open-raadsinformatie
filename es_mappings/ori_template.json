{
  "index_patterns": ["ori_*", "osi_*", "owi_*"],
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 0,

      "analysis": {
                  "analyzer": {
                      "default": {
                        "type": "dutch"
                      },
                      "text_nl": {
                          "type": "custom",
                          "filter": [
                              "asciifolding",
                              "lowercase",
                              "custom_word_delimiter"
                          ],
                          "tokenizer": "standard"
                      },
                      "fttext_nl": {
                        "type": "custom",
                        "filter": [
                            "asciifolding",
                            "lowercase",
                            "custom_word_delimiter",
                            "type_as_payload"
                        ],
                        "tokenizer": "standard"
                      }
                  },
                  "filter": {
                      "custom_word_delimiter": {
                          "type": "word_delimiter",
                          "split_on_numerics": false,
                          "generate_number_parts": true,
                          "preserve_original": true,
                          "stem_english_possesive": false,
                          "catenate_words": false,
                          "catenate_numbers": true,
                          "split_on_case_change": false,
                          "generate_word_parts": true
                      }
                  }
              }
    }
  },
  "mappings": {
    "dynamic_date_formats": ["yyyy-MM-dd'T'HH:mm:ss.SSSSSS", "strict_date_time", "strict_date_time_no_millis", "strict_date_optional_time"],
    "dynamic_templates": [
      {
        "disbled_context": {
          "match": "@context",
          "mapping": {
            "type": "object",
            "enabled": false
          }
        }
      },
      {
        "disabled_was_generated_by": {
          "match": "was_generated_by",
          "mapping": {
            "type": "object",
            "enabled": false
          }
        }
      },
      {
        "list_as_text": {
          "match": "@list",
          "mapping": {
            "type": "text"
          }
        }
      }
    ],
    "properties": {
      "@context": {
        "type": "object",
        "enabled": false
      },
      "@id": {
        "type": "keyword"
      },
      "@type": {
        "type": "keyword"
      },
      "biography": {
        "type": "text"
      },
      "chair": {
        "type": "text"
      },
      "content_type": {
        "type": "keyword"
      },
      "family_name": {
        "type": "text"
      },
      "image": {
        "type": "keyword"
      },
      "invitee": {
        "type": "text"
      },
      "is_referenced_by": {
        "type": "keyword"
      },
      "last_discussed_at" : {
        "type" : "date",
        "format" : "yyyy-MM-dd'T'HH:mm:ss.SSSSSS||strict_date_time||strict_date_time_no_millis||strict_date_optional_time"
      },
      "original_url": {
        "type": "keyword"
      },
      "parent": {
        "type": "keyword"
      },
      "phone": {
        "type": "text"
      },
      "text": {
        "type": "text",
        "term_vector": "with_positions_offsets_payloads",
        "analyzer": "fttext_nl"
      },
      "md_text": {
        "type": "text",
        "term_vector": "with_positions_offsets_payloads",
        "analyzer": "fttext_nl"
      },
      "title": {
        "type": "text"
      },
      "name": {
        "type": "text"
      },
      "description": {
        "type": "text",
        "term_vector": "with_positions_offsets_payloads",
        "analyzer": "fttext_nl"
      },
      "neighborhood_polygons": {
        "type": "geo_shape"
      },
      "text_pages": {
        "type": "nested",
        "properties" : {
            "page_number" : {
              "type" : "long"
            },
            "text" : {
              "type": "text",
              "term_vector": "with_positions_offsets_payloads",
              "analyzer": "fttext_nl"
            }
          }
      },
      "url": {
        "type": "keyword"
      }
    }
  }
}

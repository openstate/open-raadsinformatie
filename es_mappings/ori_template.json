{
  "index_patterns": ["ori_*", "osi_*", "ggm_*"],
  "settings": {
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 1
    }
  },
  "mappings": {
    "dynamic_date_formats": ["yyyy-MM-dd'T'HH:mm:ss.SSSSSS", "strict_date_time", "strict_date_time_no_millis", "strict_date_optional_time"],
    "properties": {
      "@context": {
        "type": "object",
        "enabled": false
      },
      "text": {
        "type": "text"
      },
      "title": {
        "type": "text"
      },
      "name": {
        "type": "text"
      },
      "description": {
        "type": "text"
      },
      "neighborhood_polygons": {
        "type": "geo_shape"
      },
      "text_pages": {
        "type": "nested"
      }
    }
  }
}
